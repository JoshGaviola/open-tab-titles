{
  "manifest_version": 3,
  "name": "Tab Title Extractor & URL Blocker",
  "version": "1.1",
  "description": "Displays all tab titles and blocks specific URLs",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tab Tools"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["url-blocker/blocker-content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["url-blocker/blocker-content.js"],
    "matches": ["<all_urls>"]
  }]
}